\glssetnoexpandfield{unit} 

% New style for acronyms
\newglossarystyle{acronym}{ 
	\setglossarystyle{long} 
	\renewenvironment{theglossary}   
	{\begin{longtable}{ 
				@{} p{0.2\textwidth} 
				@{} p{0.8\textwidth} 
				@{} l @{}} 
		}   
		{\end{longtable}} 
	% Table header  
	\renewcommand*{\glossaryheader}{ 
		\bfseries Abkürzung 
		& \bfseries Bedeutung 
		\\[3mm] 
		\endhead 
	} 
	\renewcommand*{\glossentry}[2]{ 
		\glstarget{##1}{\glossentryname{##1}} %Abkürzung 
		& \glossentrydesc{##1}   %Beschreibung 
		\\ 
	} 
} 

% New style for symbols,  including units
\newglossarystyle{symbols}{ 
	\setglossarystyle{long3col} 
	\renewenvironment{theglossary} 
	{\begin{longtable}{ 
				@{} p{0.15\textwidth}% default(0.2)				
				@{} p{0.2\textwidth} 
				@{} p{0.65\textwidth} 
				@{} l @{}}} 
		{\end{longtable}} 
	% Table header 
	\renewcommand*{\glossaryheader}{           
		\bfseries Symbol 
		& \bfseries Einheit 
		& \bfseries Beschreibung 
		\\[3mm] 
		\endhead 
	} 
	\renewcommand*{\glossentry}[2]{ 
		\glstarget{##1}{\glossentryname{##1}} 
		& $\Bigl[\glsunit{##1}\Bigr]$% <- geändert 
		& \glossentrydesc{##1} 
		\\
		\smallskip
	} 
} 
\renewcommand*{\arraystretch}{1.5}% vertikaler Abstand der Einträge erhöhen (default=1)

% New style for constants,  including units and values
\newglossarystyle{constants}{ 
	\renewenvironment{theglossary} 
	{\begin{longtable}{ 
				@{} p{0.15\textwidth} 
				@{} p{0.15\textwidth} 
				@{} p{0.20\textwidth} 
				@{} p{0.55\textwidth} 
				@{} l@{}} 
		}%   
		{\end{longtable}} 
	% Table header 
	\renewcommand*{\glossaryheader}{   
		\bfseries Symbol 
		& \bfseries Wert 
		& \bfseries Einheit 
		& \bfseries Beschreibung 
		\\[3mm] 
		\endhead 
	} 
	\renewcommand*{\glossentry}[2]{   
		\glstarget{##1}{\glossentryname{##1}} %entry name 
		& \glsvalue{##1}%Wert 
		& $\left[\glsunit{##1}\right]$% <- geändert 
		& \glossentrydesc{##1} %Description 
		\\
		\smallskip 
	} 
} 
