				@{} p{0.15\textwidth} 
				@{} p{0.85\textwidth} 
				@{} l @{}} 
		}   
		{\end{longtable}} 
	% Table header
	\renewcommand*{\glossaryheader}{ 
		\bfseries Index 
		& \bfseries Beschreibung 
		\\[3mm] 
		\endhead 
	} 
	\renewcommand*{\glossentry}[2]{ 
		\glstarget{##1}{\glossentryname{##1}} %short name 
		& \glossentrydesc{##1}   %Description 
		\\ 
	} 
} 
