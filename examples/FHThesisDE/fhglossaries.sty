\newglossary*{indices}{Indizes} 
\newglossary*{dimless}{Dimensionslose Kennzahlen}

\glsaddkey 
{unit} 
{\glsentrytext{\glslabel}} 
{\glsentryunit} 
{\GLsentryunit} 
{\glsunit} 
{\Glsunit} 
{\GLSunit} 

\glsaddkey 
