\newcommand{\trade}[1]{{#1}\SymbTrade} % Warenzeichen
\newcommand{\namefoot}[4]{\textsc{#1}\footnote{\textsc{#1}, #2 (#3), #4}} % Fußnote für Namen bedeutender Personen
\newcommand{\uA}{u.\,A. }

\newcommand*\total[3]{\left.#1\right\rvert_{#2}^{#3}} % totales Differential

